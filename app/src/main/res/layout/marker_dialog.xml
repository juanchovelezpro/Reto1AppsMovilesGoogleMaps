<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MarkerDialog">

    <Button
        android:id="@+id/butCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:text="@string/cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewMarker"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreMark" />

    <Button
        android:id="@+id/butAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/butCancelar"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreMark"
        app:layout_constraintVertical_bias="0.555" />

    <ImageView
        android:id="@+id/imageViewMarker"
        android:layout_width="195dp"
        android:layout_height="180dp"
        android:contentDescription="Marker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/marker" />

    <EditText
        android:id="@+id/editTextNombreMark"
        android:layout_width="195dp"
        android:layout_height="45dp"
        android:layout_marginStart="203dp"
        android:layout_marginTop="7dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewMarker"
        app:layout_constraintStart_toStartOf="@+id/imageViewMarker"
        app:layout_constraintTop_toBottomOf="@+id/txtViewNombreMarker" />

    <TextView
        android:id="@+id/textViewCrearMarker"
        android:layout_width="196dp"
        android:layout_height="35dp"
        android:layout_marginStart="203dp"
        android:layout_marginEnd="12dp"
        android:text="@string/crear_marcador"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toEndOf="@+id/imageViewMarker"
        app:layout_constraintStart_toStartOf="@+id/imageViewMarker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtViewNombreMarker"
        android:layout_width="191dp"
        android:layout_height="20dp"
        android:layout_marginStart="203dp"
        android:layout_marginTop="10dp"
        android:text="@string/nombre_marcador"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCrearMarker" />

</androidx.constraintlayout.widget.ConstraintLayout>
